<%- include('./dashboard.ejs') %>

<div class="content">

<h2>Add New Blog</h2>
<form method="POST" action="/admin/add-blog" >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input type="text" name="title" id="title" value="<%= formData.title || '' %>" class="form-control" required>
        </div>
        
      

    <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <select class="form-select" name="category" required>
            <% categories.forEach(category => { %>
              <option value="<%= category._id %>"><%= category.name %></option>
            <% }) %>
          </select>
          
    </div>

    
    <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="description" id="description" class="form-control" required><%= formData.description || '' %></textarea>
      </div>

    <div class="mb-3">
        <label for="publishDate" class="form-label">Publish Date</label>
        <input type="date" class="form-control" name="publishDate" required>
    </div>

    <div class="mb-3">
        <label for="thumbnailImage" class="form-label">Thumbnail Image</label>
        <input type="file" name="thumbnailImage" class="form-control" />
      </div>
    
      <div class="mb-3">
        <label for="featuredImage" class="form-label">Featured Image</label>
        <input type="file" name="featuredImage" class="form-control" />
      </div>
      
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="/admin/all-blogs" class="btn btn-secondary">Cancel</a>
    </div>
</form>

</div>