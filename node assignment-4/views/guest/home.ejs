

<!DOCTYPE html>
<html lang="en">
<head>
  <title>Blogify - Home</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <header>
    <h1>Welcome to Blogify</h1>
    <form action="/search" method="get">
      <input type="text" name="q" placeholder="Search blogs..." value="<%= query || '' %>">
      <button type="submit">Search</button>
    </form>
  </header>
  <main>
    <h2>Latest Blogs</h2>
  
    <div class="container mt-4">
      <div class="row">
        <% if (blogs.length > 0) { %>
          <% blogs.forEach(blog => { %>
            <div class="col-md-6 col-lg-4 mb-4">
              <div class="card shadow-sm h-100">
                <% if (blog.featuredImage) { %>
                  <img src="<%= blog.featuredImage %>" alt="Featured Image" />
                <% } else { %>
                  <p>No featured image available.</p>
                <% } %>
                <div class="card-body">
                  <h5 class="card-title">
                    <a href="/blogs/<%= blog.slug %>" class="text-decoration-none text-dark">
                      <%= blog.title %>
                    </a>
                  </h5>
                  <p class="card-text">
                    <%= blog.description.slice(0, 100) %>...
                  </p>
                </div>
                <div class="card-footer">
                  <small class="text-muted">
                    Published on: <%= blog.createdAt ? new Date(blog.createdAt).toDateString() : "Date not available" %>
                  </small>
                </div>
                
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <div class="col-12 text-center">
            <p class="text-muted">No blogs available. Please check back later!</p>
          </div>
        <% } %>
      </div>
    </div>
    
  </main>
</body>
</html>
