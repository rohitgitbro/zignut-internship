<!DOCTYPE html>
<html lang="en">
<head>
  <title>Blogify - Home</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-light">
  <header class="bg-primary text-white py-3">
    <div class="container d-flex justify-content-between align-items-center">
      <h1 class="mb-0">Welcome to Blogify</h1>
      <form action="/search" method="get" class="d-flex">
        <input type="text" name="q" class="form-control me-2" placeholder="Search blogs..." value="<%= query || '' %>">
        <button type="submit" class="btn btn-light">Search</button>
      </form>
    </div>
  </header>
  
  <main class="container py-4">
    <h2 class="mb-4">Latest Blogs</h2>
    <div class="row">
      <% if (blogs.length > 0) { %>
        <% blogs.forEach(blog => { %>
          <div class="col-md-6 col-lg-4 mb-4">
            <div class="card shadow-sm h-100">
              <% if (blog.featuredImage) { %>
                <img src="<%= blog.featuredImage %>" alt="Featured Image" class="card-img-top" />
              <% } else { %>
                <div class="p-3 text-center text-muted">No featured image available.</div>
              <% } %>
              <div class="card-body">
                <h5 class="card-title">
                  <a href="/blogs/<%= blog.slug %>" class="text-decoration-none text-dark">
                    <%= blog.title %>
                  </a>
                </h5>
                <p class="card-text">
                  <%= blog.description.slice(0, 100) %>...
                </p>
              </div>
              <div class="card-footer bg-white">
                <small class="text-muted">
                  Published on: <%= blog.createdAt ? new Date(blog.createdAt).toDateString() : "Date not available" %>
                </small>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-12 text-center">
          <p class="text-muted">No blogs available. Please check back later!</p>
        </div>
      <% } %>
    </div>
  </main>
</body>
</html>
